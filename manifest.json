{
    "manifest_version": 2,
    "name": "QuFlix",
    "version": "0.1",
    "description": "Make a Queue of your next Netflix binge",
    "permissions": ["declarativeContent", "contextMenus"],

    "content_scripts": [
        {
          "matches": [
            "https://www.netflix.com/*", "http://www.netflix.com/*"
          ],
          "js": ["jquery-3.5.1.min.js", "content.js"]
        }
    ],
    "page_action": {
      "default_icon":  {
        "16": "images/qn16.png",
        "32": "images/qn32.png",
        "48": "images/qn48.png",
        "128": "images/qn128.png"
      },
      "default_popup": "popup.html"
    },

    "icons": {
      "16": "images/qn16.png",
      "32": "images/qn32.png",
      "48": "images/qn48.png",
      "128": "images/qn128.png"
    },

    "background": {
        "scripts": ["background.js"]
    }
}